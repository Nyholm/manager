{
    "name": "puli/manager",
    "description": "Generates Puli repositories from configured packages.",
    "homepage": "http://puli.io",
    "license": "MIT",
    "authors": [
        {
            "name": "Bernhard Schussek",
            "email": "bschussek@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3.9",
        "puli/repository": "^1.0-beta8",
        "puli/discovery": "^1.0-beta8",
        "puli/url-generator": "^1.0-beta3",
        "webmozart/json": "^1.0",
        "webmozart/path-util": "^2.2.3",
        "webmozart/expression": "^1.0-beta5",
        "webmozart/assert": "^1.0",
        "webmozart/glob": "^3.1",
        "symfony/event-dispatcher": "^2.3",
        "webmozart/key-value-store": "^1.0-beta4",
        "symfony/filesystem": "^2.3",
        "ramsey/uuid": "^2.8",
        "psr/log": "^1.0"
    },
    "require-dev": {
        "predis/predis": "^1.0",
        "basho/riak": "^1.4",
        "doctrine/cache": "^1.4",
        "phpunit/phpunit": "^4.6",
        "sebastian/version": "^1.0.1"
    },
    "minimum-stability": "beta",
    "autoload": {
        "psr-4": {
            "Puli\\Manager\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Puli\\Manager\\Tests\\": "tests/",
            "Puli\\Discovery\\Tests\\": "vendor/puli/discovery/tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "support": {
        "issues": "https://github.com/puli/issues/issues"
    }
}
